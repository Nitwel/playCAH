{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": false,
        "target": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}